{
  "compilerOptions": {
    "outDir": "./build/",
    "noImplicitAny": true,
    "sourceMap": true,
    "module": "esnext",
    "target": "es6",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "lib": [
      "dom",
      "es2017"
    ],
    "moduleResolution": "node",
    "strictNullChecks": true,
    "typeRoots": [
      "./node_modules/@types",
      "./@types"
    ],
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve"
  },
  "exclude": [
    "node_modules",
    "build",
    "**/*.spec.ts"
  ],
  "include": [
    "src"
  ]
}
